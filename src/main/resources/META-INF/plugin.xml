<idea-plugin>
    <id>com.github.artfultom.grabber</id>
    <name>Plugin display name here</name>
    <vendor email="artfultomcat@gmail.com" url="www.github.com/artfultom">Andrey Vasilyev</vendor>

    <description>Short description. Short description. Short description. Short description.</description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action
                id="POJOGrabber.Generate.NewGroup"
                class="com.github.artfultom.grabber.ProjectViewPopupMenuActionClass"
                text="Generate POJOs"
                description="Generate POJOs">
            <add-to-group group-id="NewGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl meta alt A"/><!-- test -->
        </action>
    </actions>
</idea-plugin>